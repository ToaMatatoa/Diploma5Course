<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C7E1E4"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/sv_news"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_size_40">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_size_12"
                android:layout_marginTop="@dimen/margin_size_default"
                android:layout_marginEnd="@dimen/margin_size_12"
                android:layout_marginBottom="@dimen/margin_size_default"
                android:scrollbars="vertical"
                tools:listitem="@layout/news_list_item" />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>